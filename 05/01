istic quantum information theory.\n","versions":[{"version":"v1","created":"Sat, 30 Apr 2011 20:38:09 GMT"},{"version":"v2","created":"Thu, 19 May 2011 12:34:21 GMT"},{"version":"v3","created":"Thu, 21 Jun 2012 18:56:27 GMT"},{"version":"v4","created":"Thu, 22 Nov 2012 04:24:15 GMT"}],"update_date":"2015-03-19"}
