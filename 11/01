ain-gradient coefficients.\n","versions":[{"version":"v1","created":"Mon, 31 Oct 2011 18:45:23 GMT"},{"version":"v2","created":"Tue, 23 Oct 2012 21:00:17 GMT"}],"update_date":"2012-10-25"}
